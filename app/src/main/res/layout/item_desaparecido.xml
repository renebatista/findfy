<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/fotoDesaparecido"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/nomeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/koulen_regular"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/fotoDesaparecido"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/descricaoTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Descrição"
        android:fontFamily="@font/koulen_regular"
        app:layout_constraintTop_toBottomOf="@id/nomeTextView"
        app:layout_constraintStart_toEndOf="@id/fotoDesaparecido"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/botao_add_avistamento"
        android:layout_width="138dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="4dp"
        android:textAlignment="center"
        android:backgroundTint="#008B51"
        android:fontFamily="@font/koulen_regular"
        android:padding="10dp"
        android:text="ADD AVISTAMENTO"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@id/fotoDesaparecido"
        app:layout_constraintTop_toBottomOf="@id/descricaoTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>
