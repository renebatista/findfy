<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#600000"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/activity_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nome_aplicativo"
        android:textSize="55sp"
        android:textColor="#BFFFFFFF"
        android:fontFamily="@font/koulen_regular"
        app:layout_constraintBottom_toBottomOf="@+id/main"
        app:layout_constraintStart_toStartOf="@+id/main"
        app:layout_constraintEnd_toEndOf="@+id/main"
        app:layout_constraintTop_toTopOf="@+id/main"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/botao_ver_desaparecidos"
        android:layout_width="326dp"
        android:layout_height="56dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#008B51"
        android:fontFamily="@font/koulen_regular"
        android:text="@string/ver_desaparecidos"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/main"
        app:layout_constraintStart_toStartOf="@+id/main"
        app:layout_constraintTop_toBottomOf="@+id/activity_main" />

    <Button
        android:id="@+id/botao_cadastrar_desaparecido"
        android:layout_width="326dp"
        android:layout_height="56dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#007AFF"
        android:fontFamily="@font/koulen_regular"
        android:text="@string/cadastrar_desaparecido"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/main"
        app:layout_constraintStart_toStartOf="@+id/main"
        app:layout_constraintTop_toBottomOf="@+id/botao_ver_desaparecidos" />

    <Button
        android:id="@+id/botao_ver_desaparecido"
        android:layout_width="326dp"
        android:layout_height="56dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#ab8000"
        android:fontFamily="@font/koulen_regular"
        android:text="Visualizar Avistamentos"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/main"
        app:layout_constraintStart_toStartOf="@+id/main"
        app:layout_constraintTop_toBottomOf="@+id/botao_cadastrar_desaparecido" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rodape_app"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#BFFFFFFF"
        android:fontFamily="@font/koulen_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBaseline_toTopOf="parent"
        android:layout_margin="50dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>